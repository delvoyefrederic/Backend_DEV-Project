@model Oauth.Models.ViewModel.ViewCreateReservation

@{
    ViewData["Title"] = "Order new ticket";
    
}

<h1>Order new Ticket</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ReservationTicketPost">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <select asp-for="SelectedFestival" asp-items="@{new SelectList(Model.Festivals,"MusicEvenementName","MusicEvenementName")}">
                </select>
            </div>
            <div class="form-check">
                <input checked id="Standaard" class="form-check-input" type="radio" asp-for="SelectedPriceType" value="Standaard" />
                <label for="Standaard" class="form-check-label">Standaard</label>

            </div>
            <div class="form-check">
                <input id="VIP" class="form-check-input" type="radio" asp-for="SelectedPriceType" value="VIP" />
                <label for="VIP" class="form-check-label">VIP</label>

            </div>



            <div class="form-group">
                <input type="submit" value="Order Ticket" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

